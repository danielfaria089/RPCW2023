extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Dados da Pessoa: #{p.id}
        
    .w3-containerul.w3-ul.w3-card-4
        li #[b Nome:] #{p.nome}
        li #[b Idade:] #{p.idade}
        li #[b Sexo:] #{p.sexo}
        li #[b Morada:] #{p.morada.cidade}, #{p.morada.distrito}
        if p.CC
            li #[b CC:] #{p.CC}
        else if p.BI
            li #[b BI:] #{p.BI}
        if p.descricao
            li #[b Descrição:] #{p.descricao}
        li #[b Profissão] #{p.profissao}
        li #[b Partido Político] #{p.partido_politico.party_abbr} - #{p.partido_politico.party_name}
        if p.religiao 
            li #[b Religião:] #{p.religiao}
        .w3-container 
            fieldset.w3-margin
                legend
                    h3 Desportos
                each desporto in p.desportos
                    li= desporto
        .w3-container 
            fieldset.w3-margin
                legend
                    h3 Animais
                each animal in p.animais
                    li= animal
        .w3-container 
            fieldset.w3-margin
                legend
                    h3 Figura Pública PT
                each figura in p.figura_publica_pt
                    li= figura
        li #[b Marca de Carro:] #{p.marca_carro}
        .w3-container 
            fieldset.w3-margin
                legend
                    h3 Destinos Favoritos
                each destino in p.destinos_favoritos
                    li= destino
        .w3-container 
            fieldset.w3-margin
                legend
                    h3 Atributos
                if p.atributos.fumador 
                    li Fumador
                if p.atributos.gosta_cinema 
                    li Gosta de Cinema
                if p.atributos.gosta_viajar 
                    li Gosta de Viajar
                if p.atributos.acorda_cedo 
                    li Acorda Cedo
                if p.atributos.gosta_musica
                    li Gosta de Música
                if p.atributos.gosta_comer
                    li Gosta de Comer
                if p.atributos.gosta_animais_estimacao
                    li Gosta de Animais de Estimação
                if p.atributos.gosta_dancar
                    li Gosta de Dançar
                li #[b Comida Favorita:] #{p.atributos.comida_favorita}

    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



