extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Pessoas #[a.w3-btn.w3-round.w3-grey(href="/pessoas/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th BI/CC
          th Nome
          th Idade
          th Sexo
          th Ações
        
        each p in plist
          tr
            if p.CC
              td= p.CC
            else
              td= p.BI
            td 
              a(href="/pessoas/"+p._id)= p.nome
            td= p.idade
            td= p.sexo
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/pessoas/edit/"+p._id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/pessoas/delete/"+p._id) Delete

              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}